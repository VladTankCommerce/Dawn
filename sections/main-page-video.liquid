<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{% style %}
.tc-content{
	padding: 50px 15px;
}
.video{
	width:100%;
	height: 100%;
}
.video iframe{
	width: 100%;
}
.video video{
	width: inherit;
	height: 400px;
}
.btn-product-back{
    margin: 20px 0;
    border-radius: 5px;
 	border: 2px solid #df1f1f;
    padding: 12px 20px;
    display: inline-block;
	text-decoration: none;
    cursor: pointer;
}
.btn-product-back span{
	color: #df1f1f;
    font-size: 20px;
}
.caption h1{
	margin: 0;
}
.description{
	font-size: 18px;
	margin-top: 20px;
}
.instagram-media{
	margin: 0 auto!important;
}
{% endstyle %}


<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="rte">
    <div class='tc-content'>
       <div class='video'>
          {{page.metafields.video.video_assets}}
       </div>
       <div class='video video-inst'>
          {{page.metafields.video-instagram.video_inst}}
       </div>
       <a href="" class="btn-product-back">
         <span>
         	Back to other exercise
         </span>
      </a>
      <div class='caption'>
         <h1>
          {{page.metafields.Caption.caption_assets}}
        </h1>
      </div>
      <div class='description'>
          {{page.metafields.Text.text_assets}}
      </div>
    </div>
    
    
    
  </div>
</div>

{% schema %}
{
  "name": "Page With Video",
  "tag": "section",
  "class": "section"
}
{% endschema %}
